    <!-- Drop down segment -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <%= link_to 'Add A Cocktail', new_cocktail_path, :class => "btn btn-primary text-white" %>
      </ul>
    </div>
  </div>
</div>
