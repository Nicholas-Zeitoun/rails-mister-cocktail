<h1>Create a new cocktail:</h1>
<!-- Cocktail crreation forms: 1. Cocktail form, 2. Ingredients form/list, 3. Finish Button  -->
<div class="col-12">
  <!-- 1. Rendering the cocktail creation form -->
  <div class="card mt-4 shadow-lg" data-aos="zoom-in" data-aos-duration="1500">
    <%= render 'shared/cocktail_form'%>
  </div>
  <!-- 2. Ingredients form/list -->
  <div class="card mt-4 opct opacity-30">
    <div class="card-body">
      <h5 class="card-title">Step 2</h5>
      <h6 class="card-subtitle mb-2 text-muted">Add some ingredients to mix your cocktail!</h6>
      <% @ingredients.each do |ingredient| %>
        <button type="button" class="btn btn-primary text.white m-2 disabled fake-button" disabled="disabled"><%= ingredient.name %> +</button>
      <% end %>
    </div>
  </div>
  <!-- 3. Finish button -->
  <div class="row mt-4 justify-content-center">
  <!-- Start of: Modal -->
    <!-- Modal: Button -->
    <button type="button" class="btn btn-outline-primary m-2 disabled" data-toggle="modal" data-target=".finish-modal-sm">Finish!</button>
    <!-- Modal: Element -->
    <div class="modal fade finish-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content p-3">
          <h4>Please make your cocktail first! ğŸ‘†ğŸ‘†</h4>
        </div>
      </div>
    </div>
  <!-- End of: Modal -->
  </div>
</div>



